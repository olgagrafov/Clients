<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme</item>
<!--        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
         <item name="backgroundTint">@drawable/toast_background</item>
         <item name="android:textAlignment">center</item>
         <item name="android:background">@drawable/toast_background</item>
         <item name="cornerRadius">0dp</item>
         <item name="android:layout_margin">0dp</item>
         <item name="actionTextColorAlpha">1.0</item>
         <item name="android:paddingRight">5dp</item>
         <item name="android:paddingLeft">5dp</item>
         <item name="android:paddingTop">0dp</item>
         <item name="android:paddingBottom">0dp</item>
         <item name="android:layout_marginTop">0dp</item>
         <item name="android:layout_marginLeft">5dp</item>
         <item name="android:layout_marginRight">5dp</item>
         <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/btn_background</item>
        <item name="android:textColor">@color/color_txt_button</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="cornerRadius">@dimen/fab_corner</item>
    </style>



       <style name="SensibleDefaultsMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="cardCornerRadius">@dimen/fab_corner</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/app_color</item>
    </style>

    <style name="cardForimgBtnCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="cardCornerRadius">@dimen/fab_corner</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/app_color</item>
    </style>

    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_bar_height</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/tab_txt_color</item>
        <item name="tabSelectedTextColor">@color/design_default_color_on_secondary</item>
        <item name="tabIndicatorColor">@color/btn_background</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="buttons">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="cornerRadius">@dimen/fab_corner</item>
        <item name="backgroundTint">@color/btn_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_txt_button</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:breakStrategy" tools:targetApi="m">simple</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="fabs">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/btn_background</item>
        <item name="fabSize">normal</item>
        <item name="android:layout_margin">@dimen/btn_txt_size</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="tint">@color/color_txt_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btn_fab">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/btn_background</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="cornerRadius">@dimen/fab_corner</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:layout_gravity">center|bottom</item>-
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textColor">@color/color_txt_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="fabsDelete">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/app_color</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@android:drawable/ic_menu_delete</item>
    </style>

    <style name="inputs" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="endIconMode">clear_text</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:textSize">@dimen/input_txt_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxStrokeColor">@color/hint_color</item>
        <item name="hintTextColor">@color/design_default_color_on_secondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="txtLink" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:textColor">@color/btn_background</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="txtLinkClicked" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/textlines</item>
    </style>

    <style name="txtTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_reminder" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/tab_txt_color</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="txtTitleIntoActivity">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="imgBtnTab">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cornerRadius">@dimen/fab_corner</item>
    </style>

    <style name="imgBtnCard">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="boldStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/searchview_rounded</item>
    </style>

</resources>
