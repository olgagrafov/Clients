<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignatureActivity">

    <android.gesture.GestureOverlayView
        android:id="@+id/gest_sign_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:alwaysDrawnWithCache="true"
        android:background="@drawable/searchview_rounded"
        android:eventsInterceptionEnabled="true"
        android:fadeEnabled="false"
        android:fadeOffset="900000000"
        android:gestureColor="@color/colorPrimary"
        android:gestureStrokeLengthThreshold="0"
        android:gestureStrokeType="multiple"
        android:orientation="vertical"
        android:gestureStrokeWidth="10"
        android:gestureStrokeAngleThreshold="0"
        android:gestureStrokeSquarenessThreshold="0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <Button
            android:id="@+id/btn_clear_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/buttons"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4" />
        <Button
            android:id="@+id/btn_ok_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/buttons"
            android:layout_gravity="start"/>
    </LinearLayout>
</LinearLayout>