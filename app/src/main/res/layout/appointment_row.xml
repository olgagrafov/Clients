<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutAppointmentRow">

    <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center_horizontal">
            <com.google.android.material.card.MaterialCardView
                style="@style/cardForimgBtnCard"
                android:layout_gravity="center|center_horizontal"  >

                <ImageButton
                    android:id="@+id/img_btn_sms"
                    style="@style/imgBtnCard"
                    app:srcCompat="@drawable/ic_menu_send" />
            </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/txtViewClientAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/txtTitle"/>
            <TextView
                android:id="@+id/txtViewAppTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/txtTitle"/>
        </LinearLayout>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgBtnDeleteApp"
            style="@style/fabsDelete" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>